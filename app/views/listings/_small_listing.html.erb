<div class="col-md-10">
  <h4>$<%= listing.price %></h4>
  <h5>@ <%= listing.address %>, <%= listing.city %>, <%= listing.state %> <%= listing.zip %></h5>
  <p><a href="<%= listing_url(listing) %>">See more</a></p>
</div>
<div class="col-md-4">
  <% if logged_in? %>
  <%= render "favorites/form", listing: listing %>
  <% end %>
</div>